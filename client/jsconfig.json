{
  "compilerOptions": {
    "baseUrl": ".", // root của dự án
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@context/*": ["src/context/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "include": ["src"]
}
